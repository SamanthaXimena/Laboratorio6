<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.IngresosNuevoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list_morado_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Ingreso"
                android:textAlignment="center"
                android:textColor="@color/color_opcion2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/id_titulo_ingreso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_morado_border"
                android:elegantTextHeight="false"
                android:gravity="start|center_vertical"
                android:hint="Titulo"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/color_opcion2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_monto_ingreso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_morado_border"
                android:gravity="start|center_vertical"
                android:hint="Monto"
                android:padding="10dp"
                android:textColor="@color/color_opcion2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_fecha_ingreso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_morado_border"
                android:gravity="start|center_vertical"
                android:hint="Fecha"
                android:padding="10dp"
                android:textColor="@color/color_opcion2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_desc_ingreso"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_morado_border"
                android:gravity="start|center_vertical"
                android:hint="Descripcion"
                android:padding="10dp"
                android:textColor="@color/color_opcion2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/saveButton_ingreso"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/color_opcion2"
                android:text="Guardar"
                android:textSize="16sp"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
